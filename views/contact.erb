<article id="contact-form">
	<h1>Contact Us</h1>
		<form method="POST" action="/email-request">
			<div id="required-form-input">
				<div>
					<label for="first">First Name:</label>
					<input type="text" name="first" required>
				</div>
				<div>
					<label for="last">Last Name:</label>
					<input type="text" name="last" required>
				</div>
				<div>
					<label for="number">Phone Number:</label>
					<input type="text" name="phone" required>
				</div>
				<div>
					<label for="email">Email:</label>
					<input type="text" name="email" required>
				</div>
			</div>
			<div id="form-checkboxes">
				<p>Please check all that apply to your situation:</p>
				<div class="check">
					<input type="checkbox" name="financial" value="financial">
					<label for="financial">Financial Planning</label>
				</div>
				<div class="check">
					<input type="checkbox" name="protection" value="protection">
					<label for="protection">Protection Planning</label>
				</div>
				<div class="check">
					<input type="checkbox" name="tax" value="tax">
					<label for="tax">Tax Planning</label>
				</div>
				<div class="check">
					<input type="checkbox" name="retirement" value="retirement">
					<label for="retirement">Retirement Planning</label>
				</div>
				<div class="check">
					<input type="checkbox" name="portfolio" value="portfolio">
					<label for="portfolio">Portfolio Management</label>
				</div>
			</div>
			<div>
				<p>Please tell us about your unique situation:</p>
				<textarea rows="10" cols="50" name='description' required></textarea>
			</div>
			<input type="submit" class="center">
		</form>
</article>
